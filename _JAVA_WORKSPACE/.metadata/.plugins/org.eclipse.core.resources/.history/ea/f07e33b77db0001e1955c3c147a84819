package day07;

import java.util.Scanner;

public class 과제수정 {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		sc.close();
		int meun=0;
		int a=sc.nextInt();
		do {
			System.out.println("--menu--");
			System.out.println("1.+ | 2.- |3.* | 4./ | 5.% |6.종료하기");
			System.out.println(">>menu>>");
			meun=sc.nextInt();
			
			switch(meun) {
			case 1:
				int sum=sum(a=sc.nextInt(), a=sc.nextInt());
				System.out.println(a+a);
				break;
			case 2:
				int sub=sub(a=sc.nextInt(), a=sc.nextInt());
				System.out.println(a-a);
			case 3:
				int mul=div(a=sc.nextInt(), a=sc.nextInt());
				System.out.println(a*a);
			case 4:
				int div=div(a=sc.nextInt(), a=sc.nextInt());
				System.out.println(a/a);
			case 5:
				int mod=mod(a=sc.nextInt(), a=sc.nextInt());
				System.out.println(a%a);
				
				
				break;
			}
			}while
		
		

	}

	public static int sub(int num1,int num2) {
		if(num1<num2) {
			return num2-num1;
		}
		return num1-num2;
	}
	public static int mul(int num1, int num2) {
		return num1*num2;
	}
	public static int div(int num1, int num2) {
		if(num1<num2) {
			return num2/num1;
		}
		return num1/num2;
	}
	public static int mod(int num1, int num2) {
		if(num1<num2) {
			return num2%num1;
		}
		return num1%num2;
	}
	public static int sum(int num1,int num2) {
		return num1+num2;
 }
}
